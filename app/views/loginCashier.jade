extends layout

block content
	div.contenedorForm.center
		form.form-signin(name="loginCashier", action="/loginCashier", method="post")
			h1.form-signin-heading Ingrese su datos porfavor
			label.sr-only(for='inputEmail') Usuario
			input#inputEmail.form-control(type='email', name="usuario", placeholder='Usuario', required='', autofocus='')
			label.sr-only(for='inputPassword') Contraseña
			input#inputPassword.form-control(type='password', name="password", placeholder='Password', required='')
			h3 Tipo de Caja

			label.radio-inline
				input(type='radio', class='radioSpans', id='confidence1', value='cajas', name='tipoVentanilla')
			span cajas
			label.radio-inline
				input(type='radio', class='radioSpans', id='confidence1', value='plataforma', name='tipoVentanilla')
			span plataforma
			label.radio-inline
				input(type='radio', class='radioSpans', id='confidence1', value='credito', name='tipoVentanilla')
			span Crédito
			label.radio-inline
				input(type='radio', class='radioSpans', id='confidence1', value='marchamo', name='tipoVentanilla')
			span Marchamo
			label.radio-inline
				input(type='radio', class='radioSpans', id='confidence1', value='preferenciales', name='tipoVentanilla')
			span preferenciales
			
			button.myButton(type="submit", value="Guardar") Ingresar
